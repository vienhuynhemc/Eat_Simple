<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schem as.android.com/apk/res-auto"
    xmlns:app1="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="65dp"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="5dp"
            android:textColor="#4162fb"
            android:textSize="20sp"
            app1:layout_constraintEnd_toEndOf="parent"
            app1:layout_constraintStart_toStartOf="parent"
            app1:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/icon_home"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginTop="50dp"
            android:gravity="center"
            android:paddingEnd="15dp"
            android:paddingBottom="15dp"
            android:textColor="#4162fb"
            android:textSize="20sp"
            app1:layout_constraintStart_toStartOf="parent"
            app1:layout_constraintTop_toBottomOf="@id/icon"
            tools:ignore="RtlSymmetry" />

        <TextView
            android:id="@+id/icon_danhMuc"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:gravity="center"
            android:paddingEnd="15dp"
            android:paddingBottom="15dp"
            android:textColor="#4162fb"
            android:textSize="20sp"
            android:translationY="-25dp"
            app1:layout_constraintStart_toStartOf="parent"
            app1:layout_constraintTop_toBottomOf="@id/icon_home"
            tools:ignore="RtlSymmetry" />

        <TextView
            android:id="@+id/icon_MaGiamGia"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:gravity="center"
            android:paddingEnd="15dp"
            android:paddingBottom="15dp"
            android:textColor="#4162fb"
            android:textSize="20sp"
            android:translationY="-50dp"
            app1:layout_constraintStart_toStartOf="parent"
            app1:layout_constraintTop_toBottomOf="@id/icon_danhMuc"
            tools:ignore="RtlSymmetry" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView>