<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:padding="10dp"
    android:layout_margin="5dp"
    android:background="#FFF5D9"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:scaleType="centerCrop"
            android:id="@+id/activity_profile_history_img"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginRight="16dp"
            android:background="@color/gray" />

        <TextView
            android:id="@+id/activity_profile_history_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/activity_profile_history_img"
            android:text="Gà rán Hong Kong"
            android:textSize="13dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/activity_profile_history_size"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/activity_profile_history_name"
            android:layout_marginTop="10dp"
            android:layout_toEndOf="@+id/activity_profile_history_img"
            android:layout_toRightOf="@+id/activity_profile_history_img"
            android:text="Size: vừa"
            android:textSize="13dp" />
        <LinearLayout
            android:id="@+id/activity_profile_history_label_price"
            android:gravity="right|center_vertical"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/activity_profile_history_size"
            android:layout_width="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_toRightOf="@+id/activity_profile_history_img"
            android:layout_height="wrap_content">
            <TextView
                android:text="79000 VNĐ"
                android:layout_marginRight="10dp"
                android:id="@+id/activity_profile_history_priceSale"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:textSize="14dp"
                android:textColor="#FA0015"
                android:text="59000 VNĐ"
                android:textStyle="bold"
                android:id="@+id/activity_profile_history_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </LinearLayout>

        <View
            android:id="@+id/activity_profile_hostory_hr"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/activity_profile_history_img"
            android:layout_marginTop="10dp"
            android:background="#DADADA" />

        <LinearLayout
            android:gravity="center_vertical"
            android:id="@+id/activity_profile_history_total_price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/activity_profile_hostory_hr"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/activity_profile_history_number_dish"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:textSize="12dp"
                android:text="1 món ăn" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="right|center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:textSize="14dp"
                    android:layout_marginRight="10dp"
                    android:id="@+id/activity_profile_history_total_l"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Thành tiền: " />

                <TextView
                    android:id="@+id/activity_profile_history_total_p"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="69000 VNĐ"
                    android:textColor="#F11F0F"
                    android:textSize="15dp"
                    android:textStyle="bold" />
            </LinearLayout>
        </LinearLayout>

        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/activity_profile_history_total_price"
            android:layout_alignParentRight="true"
            android:layout_marginTop="10dp"
            android:background="#FFC107"
            android:gravity="center"
            android:padding="8dp"
            android:textSize="12dp"
            android:text="Mua lại"
            android:textColor="@color/white"
            android:textStyle="bold" />
    </RelativeLayout>

</LinearLayout>